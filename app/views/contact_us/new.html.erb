<h1>Contact Us</h1>

<%= form_for @contact_us, :as => :contact_us,
  :url => { :action => "create" }, :html => { :method => :post } do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <br /><br />

  <div>
    <%= f.label :full_name, "Full Name" %><br />
    <%= f.text_field :full_name %></div>

  <div>
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email %></div>

  <div>
    <%= f.label :text, "Text" %><br />
    <%= f.text_area :text %></div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end -%>
