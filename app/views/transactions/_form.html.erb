<%= form_for(@transaction) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, Transaction::CATEGORIES %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :account_id, "Account" %><br />
    <%= f.select :account_id, current_user.accounts.all.collect{ |a| [a.name, a.id] }, { :include_blank => true } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
